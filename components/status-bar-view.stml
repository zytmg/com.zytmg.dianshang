<template>
    <view style={'height:'+statusBarHeight+'px;'}></view>
</template>
<script>
export default {
    name: 'status-bar-view',
    computed: {
        statusBarHeight(){
            if (api.safeArea) {
                return api.safeArea.top;
            } else {
                let res = wx.getSystemInfoSync();
				return res.statusBarHeight;
            }
        }
    }
}
</script>